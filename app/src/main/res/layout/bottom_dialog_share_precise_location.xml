<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp">

        <ImageView
            android:id="@+id/ivRemove"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/cross"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutNotFinishTask"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivGroup"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/location"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivGroup"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Share your location"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/light_black"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:lineSpacingExtra="@dimen/_5ssp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="@string/my_text_description"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/silver"/>

        <Button
            android:id="@+id/btSharePreciseLocation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/tvDescription"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/blue"
            android:text="Share Precise Location"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvNotKnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btSharePreciseLocation"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAlignment="center"
            android:lineSpacingExtra="@dimen/_5ssp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/_12ssp"
            android:text="@string/my_text"
            android:textColor="@color/silver"/>

    </RelativeLayout>


</LinearLayout>